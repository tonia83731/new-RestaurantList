<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search" method="get">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="row">
          <div class="col input-group">
            <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="" aria-describedby="search-button">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
          {{!-- filter area --}}
          <div class="col">
            <select class="form-select" name="sortMethod" id="sortMethod" onchange="this.form.submit()">
              <option selected>{{#if sortMethod}}{{sortMethod}}{{else}}餐廳排序{{/if}}</option>
              <option value="A">A → Z</option>
              <option value="Z">Z → A</option>
              <option value="category">評分</option>
            </select>
          </div>
        </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#each restaurants}}
        <div class="text-secondary">
          <div class="card mb-3">
            <a href="/restaurants/{{this._id}}">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            </a>
            <div class="card-body p-3">
              <a href="/restaurants/{{this._id}}" class="text-secondary text-decoration-none">
                <h6 class="card-title mb-1">{{this.name}}</h6>
              </a>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge rounded-pill bg-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
              <div class="mt-3 row">
                <div class="col">
                  <a href="./restaurants/{{ this._id }}/edit" class="btn btn-info w-100">修改</a>
                </div>
                <form action="./restaurants/{{ this._id }}?_method=DELETE" method="POST" class="col">
                  <button type="submit" class="btn btn-secondary w-100">刪除</button>
                </form>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>